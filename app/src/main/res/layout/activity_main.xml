<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prog"
        android:id="@+id/setBtn"
        android:onClick="prgBtnClick"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/scanBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/devbtn"
        android:id="@+id/dbgKBtn"
        android:onClick="DBGkill"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scan"
        android:id="@+id/scanBtn"
        android:onClick="scanBtnClick"
        android:layout_above="@+id/setBtn"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="77dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/configBtn"
        android:id="@+id/conBtn"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:onClick="conBtnClick" />

</RelativeLayout>
